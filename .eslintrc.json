{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "error",
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
